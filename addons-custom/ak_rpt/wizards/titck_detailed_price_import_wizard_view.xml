<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_titck_detailed_price_import_form" model="ir.ui.view">
        <field name="name">titck.detailed.price.import.form</field>
        <field name="model">titck.detailed.price.import</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="import_file" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_import" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>